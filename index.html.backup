<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <meta name="mobile-web-app-capable" content="yes">
  <meta name="apple-mobile-web-app-capable" content="yes">
  <!-- Cache busting meta tags -->
  <meta http-equiv="Cache-Control" content="no-cache, no-store, must-revalidate">
  <meta http-equiv="Pragma" content="no-cache">
  <meta http-equiv="Expires" content="0">
  <title>Attendance Tracker</title>
  <link rel="icon"
    href="data:image/svg+xml,<svg xmlns=%22http://www.w3.org/2000/svg%22 viewBox=%220 0 100 100%22><rect width=%2290%22 height=%2290%22 x=%225%22 y=%225%22 fill=%22%23fff%22 stroke=%22%23000%22 stroke-width=%2210%22/><path d=%22M30 50 L45 65 L70 35%22 stroke=%22%234caf50%22 stroke-width=%2210%22 fill=%22none%22/></svg>">
  <link rel="preconnect" href="https://fonts.googleapis.com">
  <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
  <link href="https://fonts.googleapis.com/css2?family=Fira+Code:wght@300..700&display=swap" rel="stylesheet">
  <link rel="stylesheet" href="https://unpkg.com/leaflet@1.9.4/dist/leaflet.css" integrity="sha256-p4NxAoJBhIIN+hmNHrzRCf9tD/miZyoHS5obTRR9BMY=" crossorigin="">
  <link rel="stylesheet" href="css/style.css?v=2.2.2">
  
  <!-- Cache busting script -->
  <script>
    // Force cache refresh for development
    if (window.location.hostname === 'localhost' || window.location.hostname === '127.0.0.1') {
      // Add timestamp to force reload in development
      const timestamp = Date.now();
      const links = document.querySelectorAll('link[href*=".css"], script[src*=".js"]');
      links.forEach(link => {
        const url = new URL(link.href || link.src, window.location.href);
        if (!url.searchParams.has('v')) {
          url.searchParams.set('t', timestamp);
          if (link.href) link.href = url.toString();
          if (link.src) link.src = url.toString();
        }
      });
    }
    
    // Clear service worker cache on page load
    if ('serviceWorker' in navigator) {
      navigator.serviceWorker.getRegistrations().then(registrations => {
        registrations.forEach(registration => {
          registration.update();
        });
      });
    }
  </script>
</head>

<body>
  <main>
    <div class="container">
      <h1 class="title">Attendance Tracker</h1>
      <div class="brutalist-card" id="attendanceInfo">
        <p class="card-title" id="monthYearInfo"></p>
        <p class="card-content" id="workingDaysInfo"></p>
        <p class="card-content" id="goalInfo"></p>
        <p class="card-content" id="attendanceCount"></p>
      </div>
      <div class="calendar-container"></div>
      <button class="brutalist-btn" id="markBtn">Mark today's attendance</button>
      <button class="brutalist-btn" id="resetBtn">Reset attendance</button>
      <button class="brutalist-btn" id="logBtn">Log</button>
      <p class="card-content" id="statusMessage"></p>
    </div>
    <div class="progress-container">
      <div class="brutalist-progress">
        <div class="brutalist-progress-fill" id="progressFill" data-progress="0 / 0"></div>
      </div>
    </div>
  </main>

  <div class="gears-container">
    <div class="gear-rotate"></div>
  </div>

  <div class="options-menu" id="optionsMenu">
    <h2>Options</h2>
    <div class="color-picker">
      <label for="bgColor">Background</label>
      <input type="color" id="bgColor" name="background" value="#fffbf7">
    </div>
    <div class="color-picker">
      <label for="fgColor">Foreground</label>
      <input type="color" id="fgColor" name="foreground" value="#45372b">
    </div>
    <div class="color-picker">
      <label for="accentColor">Accent</label>
      <input type="color" id="accentColor" name="accent" value="#df7020">
    </div>
    <div class="theme-container">
      <label for="themeSelect">Theme</label>
      <select id="themeSelect">
        <option value="default">Sunlit Cream</option>
        <option value="bsod">BSOD</option>
        <option value="mint">Mint Condition</option>
        <option value="windows-98">Windows 98</option>
        <option value="dracula">Dracula</option>
        <option value="ultra-violet">Ultra Violet</option>
        <option value="hello-kitty">Hello Kitty</option>
        <option value="matrix">Matrix</option>
        <option value="dark-mode">Dark Mode</option>
        <option value="terminal">Terminal</option>
        <option value="custom">Custom</option>
      </select>
    </div>
    <div class="attendance-goal-slider">
      <label for="attendanceGoalSlider">Attendance goal</label>
      <input type="range" id="attendanceGoalSlider" class="custom-slider" min="0" max="100" value="55">
      <span id="attendanceGoalValue">55%</span>
    </div>
    
    <!-- Notification Settings -->
    <div class="notification-settings">
      <h3>Location Notifications</h3>
      <div class="setting-group">
        <label for="enableNotifications">
          <input type="checkbox" id="enableNotifications">
          Enable background notifications
        </label>
      </div>
      
      <!-- Office Location Map -->
      <div class="setting-group">
        <label>Office Location</label>
        <div class="map-container">
          <div id="officeLocationMap"></div>
          <div class="map-controls">
            <button class="brutalist-btn compact" id="useCurrentLocation">Use Current Location</button>
            <button class="brutalist-btn compact" id="resetLocation">Reset to Default</button>
          </div>
          <div class="coordinates-display">
            <span>Latitude: <span id="selectedLatitude">-34.9027297</span></span>
            <span>Longitude: <span id="selectedLongitude">-56.1342857</span></span>
          </div>
        </div>
      </div>
      
      <div class="settings-row">
        <div class="setting-group compact">
          <label for="notificationStartTime">Start</label>
          <input type="time" id="notificationStartTime" value="09:00">
        </div>
        <div class="setting-group compact">
          <label for="notificationEndTime">End</label>
          <input type="time" id="notificationEndTime" value="18:00">
        </div>
      </div>
      
      <div class="attendance-goal-slider">
        <label for="notificationDistance">Distance</label>
        <input type="range" id="notificationDistance" class="custom-slider" min="0" max="1000" value="550" step="50">
        <span id="notificationDistanceValue">550m</span>
      </div>
      
      <div class="setting-group">
        <label for="notificationInterval">Check every</label>
        <select id="notificationInterval">
          <option value="5">5 minutes</option>
          <option value="10">10 minutes</option>
          <option value="15" selected>15 minutes</option>
          <option value="30">30 minutes</option>
          <option value="60">1 hour</option>
        </select>
      </div>
      
      <div class="button-row">
        <button class="brutalist-btn compact" id="testNotification">Test</button>
        <button class="brutalist-btn compact" id="requestPermission">Permission</button>
        <button class="brutalist-btn compact" id="clearNotificationHistory">Clear</button>
      </div>
    </div>
    
    <button class="brutalist-btn" id="reset-options" style="margin-top: 20px;">Reset options</button>
    <div class="reset-full-data">
      <button class="brutalist-btn" id="resetFullDataBtn">Reset all data</button>
      <button class="brutalist-btn" id="clearCacheBtn">Clear cache</button>
    </div>
    <span class="version">v2.2.2</span>
  </div>

  <div class="overlay" id="logOverlay">
    <div class="close-button-container">
      <button class="close-button" id="closeLogOverlay">X</button>
    </div>
    <div class="content-container" id="logContent">
      <div class="button-group" style="display: flex; gap: 50px;">
        <button class="brutalist-btn" style="width: 50%;" id="exportCSVBtn">Export CSV</button>
        <button class="brutalist-btn" style="width: 50%;" id="importCSVBtn">Import CSV</button>
        <input type="file" id="importFileInput" accept=".csv" style="display: none;">
      </div>
      <div class="log-graph-container">
        <div class="log-column" id="logColumn">
          </div>
        <div class="graph-column" id="graphColumn">
          <h2 class="log-header">Attendance by Day of Week</h2>
          <div id="graphWrapper">
            </div>
        </div>
      </div>
    </div>
  </div>

  <script src="https://unpkg.com/leaflet@1.9.4/dist/leaflet.js" integrity="sha256-20nQCchB9co0qIjJZRGuk2/Z9VM+kNiyxNV1lvTlZBo=" crossorigin=""></script>
  <script type="module" src="js/main.js?v=2.2.2"></script>
</body>
</html>